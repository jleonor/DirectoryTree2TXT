<UserControl x:Class="DirectoryTreeViewer.Controls.CustomTitleBar"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Height="30"
            Background="Transparent"
            MouseLeftButtonDown="CustomTitleBar_MouseLeftButtonDown" HorizontalAlignment="Stretch">

	<Grid Background="{Binding Background, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <!-- Application Title: uses the existing font and colour -->
        <TextBlock Text="{Binding ApplicationTitle, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"
                   FontFamily="Bahnschrift"
                   FontSize="14"
                   Foreground="White" />
        <!-- Window control buttons -->
        <StackPanel Orientation="Horizontal" Grid.Column="1">
            <!-- Minimize Button (yellow circle for iOS style) -->
            <Button x:Name="MinimizeButton"
                    Click="MinimizeButton_Click"
                    Width="30" Height="30"
                    Background="Transparent"
                    BorderBrush="Transparent">
                <Ellipse Fill="#FFBE28" Width="8" Height="8"/>
            </Button>
            <!-- Toggle (Maximize/Restore) Button (green circle) -->
            <Button x:Name="ToggleWindowButton"
                    Click="ToggleWindowButton_Click"
                    Width="30" Height="30"
                    Background="Transparent"
                    BorderBrush="Transparent">
                <Ellipse x:Name="ToggleEllipse" Fill="#27C940" Width="8" Height="8"/>
            </Button>
            <!-- Close Button (red circle) -->
            <Button x:Name="CloseButton"
                    Click="CloseButton_Click"
                    Width="30" Height="30"
                    Background="Transparent"
                    BorderBrush="Transparent">
                <Ellipse Fill="#FD6057" Width="8" Height="8"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
